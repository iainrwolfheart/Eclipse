package Nationwide.First;

import java.awt.*;
import java.awt.event.*;

public class Ehandler implements ActionListener{
	 TextField No1, No2, Result;

	    public Ehandler(TextField A, TextField B, TextField C){
	        No1=A;
	        No2=B;
	        Result=C;
	    }
	    public void actionAdd (ActionEvent d){
	        int a, b, c;
	        a=Integer.parseInt(No1.getText());
	        b=Integer.parseInt(No2.getText());
	        c=a+b;
	        Result.setText(Integer.toString(c));
	    }
	    public void actionSub (ActionEvent e){
	        int a, b, c;
	        a=Integer.parseInt(No1.getText());
	        b=Integer.parseInt(No2.getText());
	        c=a-b;
	        Result.setText(Integer.toString(c));
	    }
	    public void actionMult (ActionEvent f){
	        int a, b, c;
	        a=Integer.parseInt(No1.getText());
	        b=Integer.parseInt(No2.getText());
	        c=a*b;
	        Result.setText(Integer.toString(c));
	    }
	    public void actionDiv (ActionEvent g){
	        int a, b, c;
	        a=Integer.parseInt(No1.getText());
	        b=Integer.parseInt(No2.getText());
	        c=a/b;
	        Result.setText(Integer.toString(c));
	    }
	  
}
