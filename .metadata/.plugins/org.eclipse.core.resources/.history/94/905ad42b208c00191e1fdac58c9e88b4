package Nationwide.First;

import java.awt.*;

public class WindowsXP {

	public static void main(String[] args) {
		
		 Frame f = new Frame("Calculator");
	        TextField t1, t2, t3;
	        Label l1, l2, l3;

	        Button b1 = new Button("+");
	        Button b2 = new Button("-");
	        Button b3 = new Button("x");
	        Button b4 = new Button("%");
	        l1 = new Label("First No.");
	        l2 = new Label("Second No.");
	        l3 = new Label("Result:");
	        t1 = new TextField(10);
	        t2 = new TextField(10);
	        t3 = new TextField(10);

	        FlowLayout fl = new FlowLayout();
	        f.setLayout(fl);

	        Ehandler d = new Ehandler(t1, t2, t3);
	        //Esub e = new Esub(t1, t2, t3);
	        //Emult g = new Emult(t1, t2, t3);
	        //Ediv h = new Ediv(t1, t2, t3);
	        b1.addActionListener(d);
	        b2.addActionListener(d);
	        b3.addActionListener(d);
	        b4.addActionListener(d);

	        f.add(l1);
	        f.add(t1);
	        f.add(l2);
	        f.add(t2);
	        f.add(b1);
	        f.add(b2);
	        f.add(b3);
	        f.add(b4);
	        f.add(l3);
	        f.add(t3);
	        
	        f.setSize(400,400);
	        f.setVisible(true);
	}
}
